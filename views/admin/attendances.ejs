<style>
  /* Style the table */
  .table {
    width: 100vw;
    height: 100vh;
    margin: auto;
    border-collapse: collapse;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Style the input fields */
  .date,
  .table input[type=text],
  .table select {
    padding: 8px;
    border: none;
    border-radius: 4px;
    box-sizing: border-box;
  }

  /* Style the submit button */
  .btn {
    background-color: green;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 10px;
  }

  /* Style the present status option */
  .table option[value=present] {
    background-color: #4CAF50;
    color: white;
  }

  /* Style the absent status option */
  .table option[value=Absent] {
    background-color: #f44336;
    color: white;
  }
  .text{
    color: yellowgreen;
  }
  tbody{
    border: 5px solid rgb(250, 225, 0);
  }
</style>

<form action="/admin/attendance" method="post">
  <table class="table">
    <tr>
      <th class="text">Name</th>
      <th class="text">Status</th>
    </tr>
    <td>
      <input type="date" class="date" name="date" id="">
    </td>
    <td> <button class="btn" type="submit">Submit</button></td>
    <%user.forEach(el=> { %>
      <tr>
        <td>
          <input type="text" id="" name="name" value="<%=el.name %>">
        </td>
        <td>
          <select name="status">
            <option value="present">present</option>
            <option value="Absent">Absent</option>
          </select>
        </td>
      </tr>
      <% }); %>
  </table>
</form>
