<div class="card" style="display: flex;  margin-top: 100px;  flex-direction: column; align-items: center;">
    <div class="card-img-container">
      <img src="/<%=userdata.photo %>" alt="Profile Picture" class="card-img">
    </div>
    <div class="card-content">
      <h2 class="card-title"><%=userdata.name %></h2>
      <p class="card-subtitle"><%=userdata.date %></p>
      <div class="card-details">
        <p class="card-detail-label">Email:<%=userdata.email %></p>
        <p class="card-detail-label">Phone:<%=userdata.phone %></p>
        <p class="card-detail-label">Address:</p>
        <p class="card-detail-value">123 Main St, Anytown USA</p>
      </div>
      <div class="card-social-links">
        <a href="#"><i class="fa fa-dribbble"></i></a>
        <a href="#"><i class="fa fa-twitter"></i></a>
        <a href="#"><i class="fa fa-edit"></i></a>
        <a href="#"><i class="fa fa-facebook"></i></a>
        <a href="/admin/home"><span class="fa fa-home"></span></a>
        <a href="/admin/delete/<%=userdata._id%>"><span class="fa fa-trash"></span></a>
      </div>
    </div>
  </div>

